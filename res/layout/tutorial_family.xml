<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:id="@+id/mainLayout">
    
	<ImageView
	     android:layout_width="wrap_content"
    	 android:layout_height="match_parent" 
     	 android:id="@+id/coverpage"
     	 android:src="@drawable/tut1_bg1"
     	 android:visibility="visible"
	 />
	<ImageView
	     android:layout_width="wrap_content"
    	 android:layout_height="match_parent" 
     	 android:id="@+id/firstpage"
     	 android:src="@drawable/tut1_bg2"
     	 android:visibility="gone"
	 />
	<ImageView
	     android:layout_width="wrap_content"
    	 android:layout_height="match_parent" 
     	 android:id="@+id/secondpage"
     	 android:src="@drawable/tut1_bg3"
     	 android:visibility="gone"
     
	 />
	<RelativeLayout
	android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:gravity="bottom"  
	android:layout_alignParentBottom="true">
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:scaleX="0.7"
   		android:scaleY="0.7"
   		android:background="@null"
   		android:layout_alignParentBottom="true"
   		android:layout_alignParentLeft="true"
	    android:id="@+id/left_arrow"
	    android:src="@drawable/tut_arrow_left"
	    android:visibility="invisible"
	    android:onClick="btn_prev"
	    
	    android:layout_toLeftOf="@+id/start_btn"
	 />
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/right_arrow"
	    android:scaleX="0.7"
   		android:scaleY="0.7"
   		android:background="@null"
   		android:layout_alignParentBottom="true"
   		android:layout_alignParentRight="true"
	    android:src="@drawable/tut_arrow_right"
	    android:visibility="visible"
	    android:layout_toRightOf="@+id/start_btn"
	    android:onClick="btn_next"
	 />
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/start_btn"
	    android:scaleX="0.5"
   		android:scaleY="0.5"
   		android:background="@null"
   		android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/tut_start"
	    android:visibility="invisible"
	    android:onClick="btn_play"
	 />
	</RelativeLayout>
</RelativeLayout>
