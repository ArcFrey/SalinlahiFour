<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center">

    <ImageButton
        android:id="@+id/img_lesson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"
        />
    
    <ImageButton
        android:id="@+id/img_lesson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson1" 
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:id="@+id/img_lesson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson2"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>
    
    <ImageButton
        android:id="@+id/img_lesson4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson3" 
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>
    
    <ImageButton
        android:id="@+id/img_lesson5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson4"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" 
         />

</RelativeLayout>
