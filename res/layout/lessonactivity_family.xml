                			android:onClick="onClick"
                			android:visibility="invisible"
                			android:background="@null"/>
						<ImageButton
                			android:id="@+id/img_choiceb"
                			android:layout_width="100dp"
        					android:layout_height="100dp"
                			android:layout_alignParentBottom="true"
