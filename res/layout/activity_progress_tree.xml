<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_goldcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"/>
    <TextView
        android:id="@+id/tv_silvercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goldcount"/>
    <TextView
        android:id="@+id/tv_bronzecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_silvercount"/>
    <TextView
        android:id="@+id/tv_totalstarscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bronzecount"/>
    <TextView
        android:id="@+id/tv_lessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_totalstarscount"/>
    <ListView
        android:id="@+id/lv_recentprogress"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_lessons"
        />
    <ListView
        android:id="@+id/lv_totalprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_lessons"
        android:layout_toRightOf="@id/lv_recentprogress"/>
    

</RelativeLayout>
